{
  "name": "consumers",
  "supportKongVersions": ["2.0","2.1"],
  "description": "The Consumer object represents a consumer - or a user - of an API. You can either rely on Kong as the primary datastore, or you can map the consumer list with your database to keep consistency between Kong and your existing primary datastore.",
  "showPageTitleBar": true,
  "listByPage": {
    "showByKeywords": true,
    "url": "/consumers",
    "method": "GET",
    "searchTarget": "CONSUMERS"
  },
  "buttons": [
    {
      "icon": "plus",
      "text": "ADD CONSUMER",
      "actionType": "openModal",
      "modal": {
        "name": "entityCreateUpdateModal",
        "modalName": "consumer",
        "config": {
          "entityName": "consumers"
        }
      }
    }
  ],
  "columns": [
    {
      "title": "",
      "align": "left",
      "field": {
        "type": "raw_view"
      }
    },
    {
      "title": "username",
      "align": "left",
      "field": {
        "type": "link",
        "fieldName": "username",
        "config": {
          "href": "/consumers/{id}",
          "target": "_self"
        }
      }
    },
    {
      "title": "custom_id",
      "align": "left",
      "field": {
        "type": "normal",
        "fieldName": "custom_id"
      }
    },
    {
      "title": "tags",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "tags",
        "config": {
          "method": "_format_tags"
        }
      }
    },
    {
      "title": "created",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "created_at",
        "config": {
          "method": "_format_date2"
        }
      }
    },
    {
      "title": "actions",
      "align": "left",
      "fields": [
        {
          "type": "action",
          "config": {
            "icon": "bianji",
            "text": "edit",
            "actionType": "openModal",
            "modal": {
              "name": "entityCreateUpdateModal",
              "modalName": "consumer",
              "config": {
                "editable": true,
                "entityName": "consumers",
                "entityIdFieldName": "id",
                "loadAPI": {
                  "url": "/consumers/{id}",
                  "method": "GET"
                }
              }
            }
          }
        },
        {
          "type": "action",
          "config": {
            "icon": "lajitong",
            "text": "delete",
            "actionType": "callAPI",
            "confirm": "Are you sure to delete it?",
            "api": {
              "url": "/consumers/{id}",
              "method": "DELETE"
            }
          }
        }
      ]
    }
  ]
}