{
  "name": "service.plugins",
  "supportKongVersions": ["2.0","2.1"],
  "description": "service's plugins.",
  "showPageTitleBar": false,
  "listByPage": {
    "showByKeywords": true,
    "url": "/services/{$scope_parent_entity_data.id}/plugins",
    "method": "GET",
    "searchTarget": "PLUGINS"
  },
  "buttons": [
    {
      "icon": "plus",
      "text": "ADD NEW PLUGINS",
      "actionType": "openModal",
      "modal": {
        "name": "pluginsHubModal",
        "modalName": "plugin",
        "config": {
          "scope": "SERVICES",
          "id": "$scope_parent_entity_data.id",
          "scopeToIdFieldName": "service.id"
        }
      }
    }
  ],
  "columns": [
    {
      "title": "",
      "align": "left",
      "width": 30,
      "field": {
        "type": "icon",
        "config": {
          "src": "/images/plugins/{name}.png",
          "height": "42px"
        }
      }
    },
    {
      "title": "",
      "align": "left",
      "width": 30,
      "field": {
        "type": "switch",
        "fieldName": "enabled",
        "config": {
          "action": {
            "url": "/plugins/{id}",
            "method": "PATCH"
          }
        }
      }
    },
    {
      "title": "",
      "align": "left",
      "field": {
        "type": "raw_view"
      }
    },
    {
      "title": "name",
      "align": "left",
      "field": {
        "type": "normal",
        "fieldName": "name"
      }
    },
    {
      "title": "created at",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "created_at",
        "config": {
          "method": "_format_date2"
        }
      }
    },
    {
      "title": "actions",
      "align": "left",
      "fields": [
        {
          "type": "action",
          "config": {
            "icon": "bianji",
            "text": "edit",
            "actionType": "openModal",
            "modal": {
              "name": "pluginUpModal",
              "modalName": "Plugin",
              "config": {
                "editable": true,
                "entityIdFieldName": "id",
                "entityName": "plugins",
                "loadAPI": {
                  "url": "/plugins/{id}",
                  "method": "GET"
                }
              }
            }
          }
        },
        {
          "type": "action",
          "config": {
            "icon": "lajitong",
            "text": "delete",
            "actionType": "callAPI",
            "confirm":"Are you sure to delete it?",
            "api": {
              "url": "/plugins/{id}",
              "method": "DELETE"
            }
          }
        }
      ]
    }
  ]
}