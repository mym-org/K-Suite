{
  "name": "snis",
  "supportKongVersions": ["2.0","2.1"],
  "description": "An SNI object represents a many-to-one mapping of hostnames to a certificate. That is, a certificate object can have many hostnames associated with it; when Kong receives an SSL request, it uses the SNI field in the Client Hello to lookup the certificate object based on the SNI associated with the certificate.",
  "showPageTitleBar": true,
  "listByPage": {
    "showByKeywords": true,
    "url": "/snis",
    "method": "GET",
    "searchTarget": "SNIS"
  },
  "buttons": [
    {
      "icon": "plus",
      "text": "ADD SNI",
      "actionType": "openModal",
      "actionType": "openModal",
      "modal": {
        "name": "entityCreateUpdateModal",
        "modalName": "sni",
        "config": {
          "entityName": "snis"
        }
      }
    }
  ],
  "columns": [
    {
      "title": "",
      "align": "left",
      "field": {
        "type": "raw_view"
      }
    },
    {
      "title": "name",
      "align": "left",
      "field": {
        "type": "normal",
        "fieldName": "name"
      }
    },
    {
      "title": "certificate",
      "align": "left",
      "field": {
        "type": "link",
        "fieldName": "certificate.id",
        "config": {
          "href": "/certificates/{certificate.id}",
          "target": "_self"
        }
      }
    },
    {
      "title": "tags",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "tags",
        "config": {
          "method": "_format_tags"
        }
      }
    },
    {
      "title": "created at",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "created_at",
        "config": {
          "method": "_format_date2"
        }
      }
    },
    {
      "title": "actions",
      "align": "left",
      "fields": [
        {
          "type": "action",
          "config": {
            "icon": "bianji",
            "text": "edit",
            "actionType": "openModal",
            "modal": {
              "name": "entityCreateUpdateModal",
              "modalName": "sni",
              "config": {
                "editable": true,
                "entityName": "snis",
                "entityIdFieldName": "id",
                "loadAPI": {
                  "url": "/snis/{id}",
                  "method": "GET"
                }
              }
            }
          }
        },
        {
          "type": "action",
          "config": {
            "icon": "lajitong",
            "text": "delete",
            "actionType": "callAPI",
            "confirm":"Are you sure to delete it?",
            "api": {
              "url": "/snis/{id}",
              "method": "DELETE"
            }
          }
        }
      ]
    }
  ]
}