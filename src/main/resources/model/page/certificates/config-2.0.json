{
  "name": "certificates",
  "supportKongVersions": ["2.0","2.1"],
  "description": "A certificate object represents a public certificate/private key pair for an SSL certificate. These objects are used by Kong to handle SSL/TLS termination for encrypted requests. Certificates are optionally associated with SNI objects to tie a cert/key pair to one or more hostnames.",
  "showPageTitleBar": true,
  "listByPage": {
    "showByKeywords": true,
    "url": "/certificates",
    "method": "GET",
    "searchTarget": "CERTIFICATES"
  },
  "buttons": [
    {
      "icon": "plus",
      "text": "ADD CERTIFICATE",
      "actionType": "openModal",
      "modal": {
        "name": "entityCreateUpdateModal",
        "modalName": "certificate",
        "config": {
          "entityName": "certificates"
        }
      }
    }
  ],
  "columns": [
    {
      "title": "",
      "align": "left",
      "field": {
        "type": "raw_view"
      }
    },
    {
      "title": "id",
      "align": "left",
      "field": {
        "type": "normal",
        "fieldName": "id"
      }
    },
    {
      "title": "snis",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "snis",
        "config": {
          "method": "_format_tags"
        }
      }
    },
    {
      "title": "tags",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "tags",
        "config": {
          "method": "_format_tags"
        }
      }
    },
    {
      "title": "created at",
      "align": "left",
      "field": {
        "type": "format",
        "fieldName": "created_at",
        "config": {
          "method": "_format_date2"
        }
      }
    },
    {
      "title": "actions",
      "align": "left",
      "fields": [
        {
          "type": "action",
          "config": {
            "icon": "bianji",
            "text": "edit",
            "actionType": "openModal",
            "modal": {
              "name": "entityCreateUpdateModal",
              "modalName": "certificate",
              "config": {
                "editable": true,
                "entityName": "certificates",
                "entityIdFieldName": "id",
                "loadAPI": {
                  "url": "/certificates/{id}",
                  "method": "GET"
                }
              }
            }
          }
        },
        {
          "type": "action",
          "config": {
            "icon": "lajitong",
            "text": "delete",
            "actionType": "callAPI",
            "confirm": "Are you sure to delete it?",
            "api": {
              "url": "/certificates/{id}",
              "method": "DELETE"
            }
          }
        },
        {
          "type": "action",
          "config": {
            "icon": "yun",
            "text": "services",
            "actionType": "openModal",
            "modal": {
              "name": "entityListModal",
              "modalName": "certificate's plugins",
              "config": {
                "pageModelName": "certificate.services"
              }
            }
          }
        }
      ]
    }
  ]
}